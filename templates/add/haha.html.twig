{% extends 'base.html.twig' %}

{% block body %}

	<link rel="stylesheet" href="{{ '../css/annonce.css' }}">

	<section class="article">

		<div class="ig"><img src="{{ '../img/automobile-1838782_1920.jpg' }}" alt=""></div>

		<article>

			<h1>Annonce</h1>

			<h2 class="marque">{{annonces.marque}}</h2>
			{# <p>De modèle :</p> #}
			<h3 class="marque">{{annonces.modele}}</h3>
			<p class="marque">Prix :</p>
			<h3 class="marque">{{annonces.prix}}
				€</h3>
			<h3 class="marque">{{annonces.annee}}</h3>
			<p class="marque">Date d'acqusition</p>
			{# <P>Son kilomètrage est de :</p> #}
			<h3>{{annonces.kilometrage | number_format(0, ",", " " )}}
				km au compteur</h3>
			{# <p>Son prix est de :</p> #}
			<p>Localisé à :</p>
			<h3>{{annonces.localisation}}</h3>
			<p>Date de mise en circulation :</p>
			<h3>{{annonces.date | date('d/m/Y')}}</h3>
			{# <div class="ig"><img src="{{annonces.image}}" alt=""></div> #}

		</artcle>

	</section>

{% endblock %}
