{# {% extends 'base.html.twig' %} #}


{% form_theme formAnnonce 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="{{ '../css/add.css' }} ">
{% endblock %}


{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	{#{{ encore_entry_script_tags('app') }}#}

{% endblock %}

{% block body %}

	<nav>
		<a href="{{ path('home') }} "><img src="{{ '../img/logo77.png' }}" alt=""></a>
	</nav>
	<h1>Formulaire d'ajout d'annonce</h1>
	<div id="conteneur" class="row d-flex justify-content-center gap-5">
		<div id="formanno" class="col-lg-3">

			{{ form_start(formAnnonce) }}

			{{ form_row(formAnnonce.marque, {'attr': {'placeholder': "Marque de la voiture"}}) }}
			{# <span class="error"></span> #}

			{{ form_row(formAnnonce.modele, {'attr': {'placeholder': "Modèle de la voiture"}}) }}
			{# <span class="error"></span> #}

			{{ form_row(formAnnonce.annee, {'attr': {'placeholder': "Année"}}) }}
			{# <span class="error"></span> #}

			{{ form_row(formAnnonce.kilometrage, {'attr': {'placeholder': "Nombre de kilomètrage"}}) }}
			{# <span class="error"></span> #}

			{{ form_row(formAnnonce.prix, {'attr': {'placeholder': "Prix de la voiture"}}) }}
			{# <span class="error"></span> #}

			{{ form_row(formAnnonce.localisation, {'attr': {'placeholder': "Localisation de la voiture"}}) }}
			{# <span class="error"></span> #}

			{{ form_row(formAnnonce.date, {'attr': {'placeholder': "Date de mise en circulation"}}) }}
			{# <span class="error"></span> #}

			{{ form_row(formAnnonce.image, {'attr': {'placeholder': "URL de l'image"}}) }}
			{# <span class="error"></span> #}

			<input
			type="file" id="file">
			{# <span class="error"></span> #}

			<button type="submit" id="sub" class="btn btn-success">Ajouter une annonce</button>

			{{ form_end(formAnnonce) }}

		</div>
		<div id="droite" class="col-lg-4">
			<p>
				<span class="spa">Gratuits</span>
				pour tous véhicule</p>
			<p>
				<span class="spa">Visibilité</span>
				maximale de votre annonce</p>
			<p>Possibilité de mettre
				<span class="spa">plusieurs photos</span>
			</p>
			<img src="{{ '../img/car-key-1051695_1920.jpg' }}" alt="">
		</div>
	</div>

	<script src="{{ '../js/add.js' }} "></script>


{% endblock %}
